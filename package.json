  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "electron .",
    "electron:build": "electron-builder"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "zustand": "^4.4.7",
    "better-sqlite3": "^9.2.2",
    "tesseract.js": "^5.0.4",
    "axios": "^1.6.2",
    "uuid": "^9.0.1",
    "crypto-js": "^4.2.0",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "bullmq": "^4.14.0",
    "opossum": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "winston": "^3.11.0",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "joi": "^17.11.0",
    "pg": "^8.11.3",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "vite": "^5.0.4",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/uuid": "^9.0.7",
    "@types/crypto-js": "^4.2.1",
    "@types/node": "^20.10.4",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2"
  },
  "build": {
    "appId": "com.talktoyouraccounts.app",
    "productName": "Talk to Your Accounts",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "**/*",
      "!dist-electron/**"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
